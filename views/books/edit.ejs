<%- include ('../partials/header') %>

<h1 class="text-center head">Edit <%= book.title %></h1>

<div class="middle">
    <form action="/books/<%= book._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <input class="form-control" type="text" name="book[title]" value="<%= book.title %>">
        </div>
        <div class="form-group">
            <input class="form-control" type="text" name="book[image]" value="<%= book.image %>">
        </div>
        <textarea class="form-control" name="book[plot]" cols="30" rows="10"><%- book.plot %></textarea>
        <button class="btn btn-secondary btn-block">Submit</button>
    </form>
</div>

<%- include ('../partials/footer') %>

  