<%- include ('../partials/header') %>

<div class="middle">
    <div class="w-100">
        <h1 class="text-center head">Add your book</h1>
        <form action="/books" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="title" placeholder="title" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="image" required>
            </div>
                <textarea class="form-control" name="plot" cols="30" rows="10" required></textarea>
            <button class="btn btn-secondary btn-block" type="submit">Submit</button>
        </form>
    </div>
</div>

